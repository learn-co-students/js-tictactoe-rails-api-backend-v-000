<div id="test-games">
  <h3>Number of games: <%= Game.count %></h3>
</div>
<% @games.each do |game| %>
  <% board = game.state %>
  <table border="1" cellpadding="40">
    <tr>
      <td data-x="0" data-y="0" width="20"><%= board[0] %></td>
      <td data-x="1" data-y="0" width="20"><%= board[1] %></td>
      <td data-x="2" data-y="0" width="20"><%= board[2] %></td>
    </tr>
    <tr>
      <td data-x="0" data-y="1" width="20"><%= board[3] %></td>
      <td data-x="1" data-y="1" width="20"><%= board[4] %></td>
      <td data-x="2" data-y="1" width="20"><%= board[5] %></td>
    </tr>
    <tr>
      <td data-x="0" data-y="2" width="20"><%= board[6] %></td>
      <td data-x="1" data-y="2" width="20"><%= board[7] %></td>
      <td data-x="2" data-y="2" width="20"><%= board[8] %></td>
    </tr>
  </table>
<h4>Turn count: <%= game.turns %></h4>
  <hr>
  <% end %>

<div id="test-message"></div>
 